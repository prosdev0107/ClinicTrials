<% provide :title, 'Clinical Trials' %>
<%= render "shared/header" %>

<div class="row">
  <%= render "shared/sidebar" %>
  <div class="container col-md-9 col-xs-6">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Index</th>
          <th scope="col">NCTId</th>
          <th scope="col">BriefTitle</th>
          <th scope="col">OverallStatus</th>
        </tr>
      </thead>
      <tbody>
        <% @trials.each do |trial| %>
          <tr>
            <th scope="row"><%= trial['Rank'] %></th>
            <td><%= trial['NCTId'][0] %></td>
            <td><%= trial['BriefTitle'][0] %></td>
            <td><%= trial['OverallStatus'][0] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @trials %>
    <%= button_to "Import", {action: "create"}, {class: "btn btn-primary mt-3"} %>
  </div>
</div>

<%= render "shared/footer" %>

